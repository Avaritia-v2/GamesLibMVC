@model GamesLibMVC.Models.Genre

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
        <dt class="col-sm-2">
            Игры этого жанра
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Игра</th>
                    <th>Студия разработчик</th>
                </tr>
                @foreach (var item in Model.GamesInfo)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Game.GameName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Game.Developer)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GenreID">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
