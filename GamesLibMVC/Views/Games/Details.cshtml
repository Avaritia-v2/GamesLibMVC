@model GamesLibMVC.Models.Game

@{
    ViewData["Title"] = "Подробности";
}

<h1>Подробности</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Developer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Developer)
        </dd>
        <dt class="col-sm-2">
            Жанры этой игры
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Жанр</th>
                </tr>
                @foreach (var item in Model.GamesInfo)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre.GenreName)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GameID">Изменить</a> |
    <a asp-action="Index">Назад</a>
</div>
